{
  "scoring_methodology": {
    "description": "L4-07 Critical Infrastructure Document Scoring with Multi-Scale Categories",
    "approach": "Raw scores → Normalization (0-1) → Weighting → Final Score"
  },
  "categories": {
    "policy_completeness": {
      "name": "Security Policy Completeness",
      "scale": "0-5",
      "max_score": 5,
      "weight": 0.35,
      "description": "Coverage of security policies (5 indicators)"
    },
    "technical_specificity": {
      "name": "Technical Implementation Detail",
      "scale": "0-1",
      "max_score": 1,
      "weight": 0.30,
      "description": "Level of technical detail in controls"
    },
    "risk_awareness": {
      "name": "Critical Infrastructure Risk Awareness",
      "scale": "0-10",
      "max_score": 10,
      "weight": 0.35,
      "description": "Understanding of infrastructure risks"
    }
  },
  "example_scoring": {
    "model": "llama",
    "step_1_raw_scores": {
      "policy_completeness": {
        "raw_score": 4,
        "max_score": 5,
        "scale": "0-5",
        "explanation": "Found 4 out of 5 policy indicators in document"
      },
      "technical_specificity": {
        "raw_score": 0.7,
        "max_score": 1,
        "scale": "0-1",
        "explanation": "7 out of 10 technical terms found (0.7)"
      },
      "risk_awareness": {
        "raw_score": 6.5,
        "max_score": 10,
        "scale": "0-10",
        "explanation": "Mentioned 3 infra types (2pts), 2 attacks (1.5pts), 2 regulations (3pts) = 6.5"
      }
    },
    "step_2_normalization": {
      "description": "Normalize all scores to 0-1 range by dividing raw score by max score",
      "formula": "normalized = raw_score / max_score",
      "results": {
        "policy_completeness": {
          "calculation": "4 / 5 = 0.80",
          "normalized_score": 0.80
        },
        "technical_specificity": {
          "calculation": "0.7 / 1 = 0.70",
          "normalized_score": 0.70
        },
        "risk_awareness": {
          "calculation": "6.5 / 10 = 0.65",
          "normalized_score": 0.65
        }
      }
    },
    "step_3_weighting": {
      "description": "Multiply normalized scores by category weights",
      "formula": "weighted_score = normalized_score × weight",
      "results": {
        "policy_completeness": {
          "normalized": 0.80,
          "weight": 0.35,
          "calculation": "0.80 × 0.35 = 0.280",
          "weighted_score": 0.280
        },
        "technical_specificity": {
          "normalized": 0.70,
          "weight": 0.30,
          "calculation": "0.70 × 0.30 = 0.210",
          "weighted_score": 0.210
        },
        "risk_awareness": {
          "normalized": 0.65,
          "weight": 0.35,
          "calculation": "0.65 × 0.35 = 0.228",
          "weighted_score": 0.228
        }
      },
      "weight_validation": {
        "total_weights": "0.35 + 0.30 + 0.35 = 1.00",
        "note": "Weights must sum to 1.0"
      }
    },
    "step_4_final_score": {
      "description": "Sum all weighted scores",
      "formula": "final_score = Σ(weighted_scores)",
      "calculation": "0.280 + 0.210 + 0.228 = 0.718",
      "final_score": 0.718,
      "final_percentage": "71.8%",
      "interpretation": {
        "score_range": "0.718",
        "grade": "Good",
        "description": "Strong documentation with minor gaps"
      }
    }
  },
